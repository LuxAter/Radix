{
  "CXX": "clang++",
  "CC": "clang",
  "CCIGNORE": "",
  "CXXIGNORE": "",
  "CCFLAGS": ["-fPIC -Wall -Wpedantic --static"],
  "CXXFLAGS": ["-std=c++17", "-fPIC", "-Wall", "-Wpedantic", "--static"],
  "LINK": "-llua5.3",
  "source": "src",
  "include_dir": "include",
  "include": [""],
  "build": "build",
  "radix": {
    "path": "radix.out",
    "files": "src/main.cpp",
    "group": "main",
    "type": "exe",
    "dep": ["libradix.a"]
  },
  "libradix.a": {
    "path": "$(BUILD)/libradix.a",
    "files": "$(SOURCE)/*.cpp",
    "files_exclude": "src/main.cpp",
    "type": "lib"
  }
}
